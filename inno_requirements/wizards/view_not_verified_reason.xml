<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_not_verification_reason" model="ir.ui.view">
        <field name="name">Requirements not Verified</field>
        <field name="model">requirement.not.verified</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="reason" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" class="btn-primary" type="object" name="do_confirm"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>