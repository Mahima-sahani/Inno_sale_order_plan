<?xml version="1.0" encoding="UTF-8" ?>
<templates xml.space="preserve">
    <t t-name="owl.OwlWeavingDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">
                                        Weaving Dashboard
                                    </h1>
                                    <div>
                                        <select class="form-select" t-model="state.period" t-on-change="onChangePeriod">
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 30 Days</option>
                                            <option value="90">Last 90 Days</option>
                                            <option value="365">Last 365 Days</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <KpiCard onClick.bind="viewJobWorks" name="'Job Works (In Progress)'" value="state.jobIssue.value" percentage="state.jobIssue.percentage"/>
                        <KpiCard onClick.bind="viewLateJobWorks" name="'Late Job Works'" value="state.jobIssue.lateValue" percentage="state.jobIssue.latePercentage"/>
                        <KpiCard onClick.bind="viewReceivedProducts" name="'Weaved Products Received'" value="state.product.value" percentage="state.product.percentage"/>
                        <KpiCard onClick.bind="viewWeavingExpense" name="'Weaving Expense'" value="state.expense.value" percentage="state.expense.percentage"/>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Products</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'doughnut'" title="'Top Products Report'" config="state.topProducts"/>
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Job Workers</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'pie'" title="'Top Job Workers'" config="state.topJobWorkers"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Job work Report</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'bar'" title="'Job Work Report'" config="state.jobWorkReport"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Issued Job Works (Division Wise)</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'line'" title="'Division Wise Performance'" config="state.divisionWiseReport"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>